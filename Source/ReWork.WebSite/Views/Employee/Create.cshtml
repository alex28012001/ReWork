@model ReWork.Model.ViewModels.Account.EmployeeProfileViewModel
@{
    ViewBag.Title = "Create";
    var skills = (IEnumerable<SelectListItem>)ViewBag.Skills;
}

@using (Html.BeginForm("Create", "Employee", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.LabelFor(p => p.Age) <br />
    @Html.EditorFor(p => p.Age)
    @Html.ValidationMessageFor(p => p.Age)

    @Html.Label("Skills")<br />
    @Html.ListBoxFor(p => p.SelectedSkills, skills, new { multiple = "multiple" })
    @Html.ValidationMessageFor(p=>p.SelectedSkills)

    <br /><br />
    <input type="submit" value="Send" />
}
@section scripts
{
    <script type="text/javascript" src="~/Scripts/bootstrap-multiselect.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("select[name=SelectedSkills]").multiselect({
                buttonWidth: '250px',
            });
        })
    </script>
}


