@model ReWork.Model.ViewModels.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}

@using (Html.BeginForm("ChangePassword", "account", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <br /><br />
    @Html.LabelFor(p => p.OldPassword)<br />
    @Html.EditorFor(p => p.OldPassword);
    @Html.ValidationMessageFor(p => p.OldPassword)
    <br /><br />


    @Html.LabelFor(p => p.NewPassword)<br />
    @Html.EditorFor(p => p.NewPassword)
    @Html.ValidationMessageFor(p => p.NewPassword)
    <br /><br />


    @Html.LabelFor(p => p.ConfirmPassword)<br />
    @Html.EditorFor(p => p.ConfirmPassword)
    @Html.ValidationMessageFor(p => p.ConfirmPassword)
    <br /><br />

    <input type="submit" value="Send" />
}

