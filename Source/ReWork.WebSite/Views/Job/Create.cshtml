@model ReWork.Model.ViewModels.Job.CreateJobViewModel
@{
    ViewBag.Title = "Create";
    var skills = (IEnumerable<SelectListItem>)ViewBag.Skills;
}

@using (Html.BeginForm("Create", "Job", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h4>Create job</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(p => p.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(p => p.Description, new { @class = "form-control", rows = 7, style = "max-width:500px" })
            @Html.ValidationMessageFor(p => p.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.PriceDiscussed, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(p => p.PriceDiscussed)
        </div>
    </div>



    <div class="form-group">
        @Html.Label("Skills", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ListBoxFor(p => p.SelectedSkills, skills, new { multiple = "multiple" })
            @Html.ValidationMessageFor(p => p.SelectedSkills, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/bootstrap-multiselect.js"></script>
    <script>
        $(document).ready(function () {
            $("select[name=SelectedSkills]").multiselect({
                buttonWidth: '250px',
            })
        })
    </script>
}



