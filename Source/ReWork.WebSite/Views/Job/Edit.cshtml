@model ReWork.Model.ViewModels.Job.EditJobViewModel
@{
    ViewBag.Title = "Edit";
    var skills = (IEnumerable<SelectListItem>)ViewBag.Skills;
}

<div class="modal fade" id="not-found-freelancer">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal" area-hidden="true">X</button>
                <h4>Information</h4>
            </div>
            <div class="modal-body">
                <center>
                    <h3>Not found freelancer on this job</h3>
                </center>
            </div>
        </div>
    </div>
</div>

<h4>Edit job</h4>
<hr />

@using (Html.BeginForm("Edit", "Job", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(p => p.JobId);

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" href="/job/finishjob/@Model.JobId" name="finish-job" class="btn btn-success">Finish job</button>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(p => p.Description, new { @class = "form-control", rows = 7, style = "max-width:500px" })
            @Html.ValidationMessageFor(p => p.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.PriceDiscussed, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(p => p.PriceDiscussed)
        </div>
    </div>


    <div class="form-group">
        @Html.Label("Skills", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ListBoxFor(p => p.SelectedSkills, skills, new { multiple = "multiple" })
            @Html.ValidationMessageFor(p => p.SelectedSkills, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}


@section scripts
{
    <script type="text/javascript" src="~/Scripts/components/bootstrap-multiselect.js"></script>
    <script type="text/javascript" src="~/Scripts/app/job-edit.js"></script>  
}
