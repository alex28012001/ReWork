            }

            <br />
            <span>@job.Price $</span>
            <br />
            <span>@(((DateTime)job.DateAdded).ToString())</span>
        </h4>

        <br />

        @foreach (var offer in job.Offers)
        {
            <span></span>
        }
    </div>
}

