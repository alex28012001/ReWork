}

<h2>Jobs</h2>

@foreach (var job in Model)
{
    <div style="border:1px solid black;">
        <h3>
            <a href="/Job/Details/">
                @job.Title
            </a>
        </h3>
        <h4>
            @foreach (var skill in job.Skills)
