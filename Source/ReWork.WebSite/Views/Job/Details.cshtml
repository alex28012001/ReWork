@using ReWork.WebSite.Helpers;
@using ReWork.Model.ViewModels.Profile;
@model ReWork.Model.ViewModels.Job.DetailsJobViewModel
@{
    ViewBag.Title = "Details";
}

<input type="submit" name="add-offer" class="btn btn-primary" value="Add Offer" />

<div class="modal fade">
    <div class="modal-dialog">
        @Html.Action("Create", "Offer", new { id = Model.Job.Id })
    </div>
</div>



<div class="row">
    <div class="col-md-12">
        <div class="job-details-title">
            <h3>
                <a class="hidden-xs" href="#">Freelance Projects</a>
                <span style="color:#555;"> › @Model.Job.Title</span>
            </h3>
            <div class="job-details-skills">
                @foreach (var skill in Model.Job.Skills)
                {
                    <span>@skill.Title</span>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-9">
        <div class="well">
            @Model.Job.Description
        </div>

        <br>

        <div class="fancy-tab-container">

            <ul class="nav nav-tabs two-tabs fancy">
                <li class="active"><a href="#offers-tab" data-toggle="tab" name="link-jobs-tab">Offers</a></li>
                <li><a href="#discussion-tab" data-toggle="tab" name="link-employees-tab">Discussion</a></li>
            </ul>

            <br>

            <div class="tab-content">
                <div class="tab-pane active" id="offers-tab">
                    <div class="offers-filter clearfix">
                        <div class="pull-right hidden-xs">
                            <div class="btn-group">
                                <a class="btn btn-default" name="sort-date">
                                    date
                                    <span class="fa fa-arrow-up"></span>
                                </a>
                                @*<input type="submit" class="btn btn-default active" name="sort-date" value="date">*@
                                <input type="submit" class="btn btn-default" name="sort-payment" value="price">
                                <input type="submit" class="btn btn-default" name="sort-time" value="time implementation">
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="job-offers-container">
                        @foreach (var offer in Model.Offers)
                        {
                            <div class="job-offer" data-days="@offer.ImplementationDays" data-payment="@offer.OfferPayment" data-date="@offer.AddedDate">
                                <div class="pull-right">
                                    <span class="job-offer-registration">Added: @offer.AddedDate.ToString()</span>
                                    <span class="job-offer-time">@offer.ImplementationDays days</span>
                                    <span class="job-offer-price">@offer.OfferPayment $</span>
                                </div>

                                <table>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div class="offer-employee-photo">
                                                    <a href="@Url.Action("details", "employee", new { id = offer.EmployeeId })">
                                                        @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(offer.EmployeeImage) + "\" />")
                                                    </a>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="offer-employee-name">
                                                    <a href="@Url.Action("details", "employee", new { id = offer.EmployeeId })">
                                                        @offer.UserName 
                                                    </a>
                                                </div>
                                                <div class="date-registration">
                                                    Date registration: @offer.AddedDate.ToShortDateString()
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <div class="job-offer-text">
                                    @offer.Text
                                </div>
                            </div>
                        }
                    </div>
                </div>


                <div class="tab-pane" id="discussion-tab">
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-3">
        <div class="row">
            <div class="col-md-12">
                <div class="widget">
                    <div class="widget-header">
                        Customer
                    </div>
                    <div>
                        Info about customer
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="widget">
                    <div class="widget-header">
                        Project open
                    </div>
                    <div>
                        @Model.Job.DateAdded.ToShortDateString()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script type="text/javascript" src="~/Scripts/job-details.js"></script>
    <script>
        $(function () {
            $("input[name=add-offer]").click(function (e) {
                if ("@User.Identity.IsAuthenticated" == "False") {
                    document.location.href = "/account/login?returnUrl=/job/details/" + @Model.Job.Id;
                }

                var isEmployee = "@Html.IsProfile(ProfileType.Employee)" == "True";

                if (isEmployee) {
                    $('.modal').modal('show');
                }
                else {
                    var error = "<div class='modal-content'><div class='modal-body'><center><h4>" +
                        "Please go to freelance profile or add his <a href='/profile/settings'>Setings</a></h4></center></div ></div>";
                    $('.modal-dialog').html(error);
                    $('.modal').modal('show');
                }
            });
        })
    </script>
}

