@model ReWork.Model.ViewModels.Account.UserDetailsViewModel

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Details user</h4>
    </div>
    <div class="modal-body">
        <div class="dl-horizontal">
            <form class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(p => p.UserName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(p => p.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(p => p.FirstName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(p => p.FirstName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(p => p.LastName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(p => p.LastName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(p => p.Email, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(p => p.Email)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(p => p.RegistrationDate, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(p => p.RegistrationDate)
                    </div>
               </div>

               <div class="form-group">
                   @Html.LabelFor(p => p.Roles, new { @class = "col-md-3 control-label" })
                   <div class="col-md-9">
                       @foreach (var role in Model.Roles)
                       {
                           <span style="margin-right:6px;">@role</span>
                       }
                   </div>
               </div>
            </form>
        </div>
    </div>
</div>


