@model ReWork.Model.ViewModels.Account.EditUserRolesViewModel
@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("EditUser", "Moderator", FormMethod.Post, new { @class = "form-horizontal", id="edit-user-form"}))
{
    <h2>Edit user</h2>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(p => p.Id)

    <div class="form-group">
        @Html.LabelFor(p => p.UserName, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.DisplayFor(p => p.UserName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.UserRoles, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @foreach (var role in Model.AllRoles)
            {
                <h4>
                @role
                    <input type="checkbox" name="UserRoles" value="@role" @(Model.UserRoles.Contains(role) ? "checked=\"checked\"" : "") />
                </h4>
            }
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}


@section scripts
{
    <script type="text/javascript" src="~/Scripts/app/edit-user.js"></script>
}


