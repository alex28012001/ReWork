@model ReWork.Model.ViewModels.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    @Html.LabelFor(p => p.UserName)<br />
    @Html.EditorFor(p => p.UserName)
    @Html.ValidationMessageFor(p => p.UserName)
    <br /><br />

    @Html.LabelFor(p => p.NewPassword)<br />
    @Html.EditorFor(p => p.NewPassword)
    @Html.ValidationMessageFor(p => p.NewPassword)
    <br /><br />

    @Html.LabelFor(p => p.ConfirmPassword)<br />
    @Html.EditorFor(p => p.ConfirmPassword)
    @Html.ValidationMessageFor(p => p.ConfirmPassword)
    <br /><br />

    @Html.LabelFor(p => p.Token)<br />
    @Html.EditorFor(p => p.Token)
    @Html.ValidationMessageFor(p => p.Token)
    <br /><br />

    <input type="submit" value="Send"/>
}


