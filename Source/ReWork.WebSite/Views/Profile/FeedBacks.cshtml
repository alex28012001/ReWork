@{
    ViewBag.Title = "FeedBacks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("userinformation", "profile")


<div class="row">
    <ul class="nav nav-tabs">
        <li><a href="@Url.Action("settings", "account")">Settings</a></li>
        <li><a href="@Url.Action("changepassword", "account")">Change password</a></li>
        <li><a href="@Url.Action("edit","employee")">Edit employee</a></li>
        <li><a href="@Url.Action("information", "profile")">Information</a></li>
        <li class="active"><a href="@Url.Action("feedbacks", "profile")">Feedbacks</a></li>
    </ul>

    <br />

    <div class="tab-content">
        <div class="tab-pane active">
            <div class="row">
                <div class="profile-section">

                    <div class="reviews-summary hidden-sm hidden-sm">
                        <div class="reviews-summary-wraper">
                            <div class="reviews-summary-item reviews-summary-item-count">
                                <div class="reviews-summary-count">
                                    
                                </div>
                                reviews
                            </div>

                            <div class="reviews-summary-item reviews-summary-item-percent">
                                <div class="reviews-summary-count">
                                    
                                </div>
                                positive
                            </div>

                            <div class="reviews-summary-item reviews-summary-item-details">
                                <div class="reviews-summary-feature">
                                    Avarage mark:
                                    <span class="reviews-summary-feature-count"></span>
                                </div>
                                <div class="reviews-summary-feature">
                                    Count reviews:
                                    <span class="reviews-summary-feature-count"></span>
                                </div>
                                <div class="reviews-summary-feature">
                                    Date last review:
                                    <span class="reviews-summary-feature-count">///todo////</span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="review-container">

                    </div>

                    <div class="pagination"></div>
                </div> 
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/app/user-feedbacks.js"></script>
}