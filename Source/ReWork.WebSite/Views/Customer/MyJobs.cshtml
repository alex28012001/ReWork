
@{
    ViewBag.Title = "MyJobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="job-details">
    <div class="modal-dialog">
    </div>
</div>

<br /><br />

<div class="row">
    <ul class="nav nav-tabs">
        <li class="active"><a href="@Url.Action("myjobs","customer")">Jobs</a></li>
        <li><a href="@Url.Action("myoffers","customer")">Offers</a></li>
    </ul>

    <br />
    <div class="tab-content">
        <div class="tab-pane active">

            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-left:0">
                <div class="form-group search-group">
                    <div class="input-group date" style="width:100%" id="datetimepicker">
                        <input type='text' style="max-width:300px;" class="form-control disabled" disabled="disabled" />
                        <span class="input-group-addon search-data">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>


            <div class="col-md-1 col-sm-2 col-xs-2" style="padding-left:0">
                <input type="submit" class="btn btn-default" name="search-jobs" value="Search" />
            </div>

            <div class="col-md-7 col-sm-4 col-xs-2">
                <a href="@Url.Action("Create","Job")">
                    <input type="submit" class="btn btn-primary" value="Create job" />
                </a>
            </div>


            <table class="table table-striped search-table">
                <tbody></tbody>
            </table>

            <div class="pagination"></div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/components/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Scripts/components/datepicker.min.js"></script>
    <script type="text/javascript" src="~/Scripts/app/customer-jobs.js"></script>
}



