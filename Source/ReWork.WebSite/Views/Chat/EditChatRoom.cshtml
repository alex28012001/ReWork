@model ReWork.Model.ViewModels.Chat.EditRoomViewModel

@using (Html.BeginForm("EditChatRoom", "Chat", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(p => p.ChatRoomId);

    <div class="form-group">
        @Html.LabelFor(p => p.NewTitle, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(p => p.NewTitle, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.NewTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}
