@model ReWork.Model.ViewModels.Offer.CreateOfferViewModel


    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            <h4>Create offer</h4>
        </div>
        <div class="modal-body">
            <div class="dl-horizontal">
                @using (Html.BeginForm("Create", "Offer", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(p => p.JobId);

                    <div class="form-group">
                        @Html.LabelFor(p => p.Text, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(p => p.Text, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Text, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.DaysToImplement, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(p => p.DaysToImplement, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.DaysToImplement, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.OfferPayment, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(p => p.OfferPayment, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.OfferPayment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-default" value="Create offer" />
                        </div>
                    </div>
                   
                }
            </div>
        </div>
    </div>